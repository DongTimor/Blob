<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/scale1"
        android:layout_width="188dp"
        android:layout_height="406dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/scale3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        />

    <ImageView
        android:id="@+id/mini16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/blue_mini"
        app:layout_constraintRight_toRightOf="@id/scale1"
        app:layout_constraintTop_toTopOf="@id/scale1"
        app:layout_constraintBottom_toBottomOf="@id/scale1"
        android:layout_marginBottom="85dp"/>

    <ImageView
        android:id="@+id/mini17"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blue_mini"
        android:layout_marginBottom="-3dp"
        app:layout_constraintBottom_toTopOf="@+id/mini18"
        app:layout_constraintEnd_toEndOf="@+id/mini16"
        app:layout_constraintStart_toStartOf="@+id/mini18" />

    <ImageView
        android:id="@+id/mini18"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blue_mini"
        app:layout_constraintBottom_toBottomOf="@+id/mini16"
        app:layout_constraintTop_toTopOf="@+id/mini16"
        app:layout_constraintRight_toLeftOf="@id/mini16"
       />



    <ImageView
        android:id="@+id/mini13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blue_mini"
        app:layout_constraintLeft_toLeftOf="@id/scale1"
        app:layout_constraintTop_toTopOf="@id/scale1"
        app:layout_constraintBottom_toBottomOf="@id/scale1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="38dp"
        />

    <ImageView
        android:id="@+id/mini14"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blue_mini"
        app:layout_constraintBottom_toBottomOf="@+id/mini13"
        app:layout_constraintStart_toEndOf="@+id/mini13"
        app:layout_constraintTop_toTopOf="@+id/mini13"
        />

    <ImageView
        android:id="@+id/mini15"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blue_mini"
        android:layout_marginBottom="-3dp"
        app:layout_constraintBottom_toTopOf="@+id/mini13"
        app:layout_constraintEnd_toEndOf="@+id/mini14"
        app:layout_constraintStart_toStartOf="@+id/mini13" />



</androidx.constraintlayout.widget.ConstraintLayout>