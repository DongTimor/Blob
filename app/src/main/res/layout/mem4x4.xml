<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:columnCount="2"
            android:layout_gravity="center"
            android:rowCount="3"

            >

            <LinearLayout
                android:layout_rowWeight="1"
                android:id="@+id/item4x4_num_1"
                android:layout_width="65dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_4x4_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/mem_arrow" />

                <ImageView
                    android:id="@+id/memblock4x4_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:id="@+id/item4x4_num_2"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_4x4_2"
                    android:layout_width="50dp"
                    android:visibility="invisible"
                    android:layout_height="50dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/mem_arrow" />

                <ImageView
                    android:id="@+id/memblock4x4_2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/green" />
            </LinearLayout>


            <Space
                android:layout_gravity="center|fill"
                android:layout_rowWeight="1"
                />
            <Space
                android:layout_gravity="center|fill"
                android:layout_rowWeight="1"
                />

            <LinearLayout
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:id="@+id/item4x4_num_3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_4x4_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/mem_arrow" />

                <ImageView
                    android:id="@+id/memblock4x4_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:id="@+id/item_num_3"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/arrow_4x4_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="invisible"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/mem_arrow" />

                <ImageView
                    android:id="@+id/memblock4x4_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/green" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>